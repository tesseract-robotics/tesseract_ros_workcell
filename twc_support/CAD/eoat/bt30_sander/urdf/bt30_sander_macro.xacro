<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
  <xacro:macro name="bt30_sander" params="prefix">
    <!-- link list -->
    <link name="${prefix}base_link"/>
    <link name="${prefix}sander_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://twc_support/CAD/eoat/bt30_sander/urdf/visual/base_link.dae" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://twc_support/CAD/eoat/bt30_sander/urdf/visual/base_link.dae" />
        </geometry>
      </collision>
    </link>
    <link name="${prefix}tool0"/>
    <link name="${prefix}tool0_offset"/>
    <!-- end of link list -->

    <xacro:include filename="$(find twc_support)/CAD/eoat/bt30/urdf/bt30_macro.xacro"/>
    <xacro:bt30 prefix="${prefix}bt_"/>

    <!-- joint list -->
    <joint name="${prefix}joint_bt30" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <parent link="${prefix}base_link" />
      <child link="${prefix}bt_base_link" />
    </joint>

    <joint name="${prefix}joint_sander" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <parent link="${prefix}bt_tool0" />
      <child link="${prefix}sander_link" />
    </joint>

    <joint name="${prefix}joint_tool0" type="fixed">
      <origin xyz="0 0 0.0253" rpy="0 0 0" />
      <parent link="${prefix}sander_link" />
      <child link="${prefix}tool0" />
    </joint>

    <joint name="${prefix}joint_tool0_offset" type="fixed">
      <origin xyz="0 0 0.05" rpy="0 0 0" />
      <parent link="${prefix}tool0" />
      <child link="${prefix}tool0_offset" />
    </joint>
    <!-- end of joint list -->
  </xacro:macro>
</robot>
